{
    "name": "Advanced AdBlocker",
    "version": "1.1",
    "manifest_version": 3,
    "description": "Blocks banners, Flash ads and hides ad containers",
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "storage",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "img/16px.png",
            "48": "img/48px.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [{
        "resources": ["empty.html"],
        "matches": ["<all_urls>"]
    }],
    "icons": {
        "16": "img/16px.png",
        "48": "img/48px.png"
    }
}
